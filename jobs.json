const jobs = [
  {
    "title": "Head of Tea Buying",
    "company": "The London Tea Company",
    "location": "London, England",
    "type": "Full-time",
    "link": "#",
    "snippet": "Seeking an experienced tea professional to lead our global sourcing and quality control team. Must have 10+ years of experience in the specialty tea industry...",
    "description": {
      "intro": "The London Tea Company is seeking an experienced and passionate Head of Tea Buying to lead our global sourcing and quality control team.",
      "responsibilities": [ "Develop and execute global sourcing strategy.", "Manage relationships with tea gardens and suppliers.", "Lead quality control team.", "Travel internationally to inspect crops." ],
      "qualifications": [ "10+ years experience in specialty tea.", "Expert-level palate and tea tasting skills.", "Proven international sourcing track record." ]
    }
  },
  {
    "title": "Marketing Manager - Herbal Infusions",
    "company": "Pukka Herbs",
    "location": "Bristol, England",
    "type": "Full-time",
    "link": "#",
    "snippet": "Join our dynamic marketing team to drive growth for our herbal wellness tea category...",
    "description": {
      "intro": "Develop and implement marketing campaigns for herbal wellness tea category.",
      "responsibilities": [ "Create multi-channel campaigns.", "Analyze market trends.", "Collaborate on new product launches.", "Manage digital presence." ],
      "qualifications": [ "5+ years brand marketing experience.", "Passion for herbal wellness.", "Strong digital marketing skills." ]
    }
  },
  {
    "title": "Tasting Room Associate (Part-Time)",
    "company": "Rare Tea Co.",
    "location": "Remote",
    "type": "Part-time",
    "link": "#",
    "snippet": "Assist in our tasting room, preparing samples and engaging with clients...",
    "description": {
      "intro": "Provide an exceptional experience to wholesale clients and visitors.",
      "responsibilities": [ "Prepare and serve tea samples.", "Educate clients on teas.", "Maintain tasting room.", "Assist with inventory." ],
      "qualifications": [ "Deep passion for specialty tea.", "Excellent communication.", "Flexible hours including weekends." ]
    }
  }
];

const jobList = document.getElementById('job-list');
const jobDetails = document.getElementById('job-details');

jobs.forEach(job => {
  const card = document.createElement('div');
  card.className = 'job-card';
  card.innerHTML = `
    <div class="job-card-header">
      <h3>${job.title}</h3>
      <p>${job.company} - ${job.location}</p>
      <p>${job.type}</p>
      <button class="apply-btn">Apply Now</button>
    </div>
    <p class="job-snippet">${job.snippet}</p>
  `;
  card.addEventListener('click', () => {
    document.querySelectorAll('.job-card').forEach(c => c.classList.remove('active'));
    card.classList.add('active');
    jobDetails.innerHTML = `
      <div class="job-details-content">
        <h2>${job.title}</h2>
        <p><strong>${job.company}</strong> - ${job.location}</p>
        <p>${job.type}</p>
        <p>${job.description.intro}</p>
        <h3>Responsibilities</h3>
        <ul>${job.description.responsibilities.map(r => `<li>${r}</li>`).join('')}</ul>
        <h3>Qualifications</h3>
        <ul>${job.description.qualifications.map(q => `<li>${q}</li>`).join('')}</ul>
        <button class="apply-btn">Apply Now</button>
      </div>
    `;
  });
  jobList.appendChild(card);
});
