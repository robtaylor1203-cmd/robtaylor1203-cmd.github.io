/* ========================================= */
/* NEW: ENHANCED FEATURES (PRESERVES DESIGN) */
/* ========================================= */

/* System status indicator (matches your design) */
.system-status {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 16px 0;
    font-size: 14px;
    color: #5f6368;
}

.status-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: #34a853;
    margin-right: 8px;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.5; }
    100% { opacity: 1; }
}

/* Quick stats (using your existing design language) */
.quick-stats {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin: 20px 0;
    padding: 16px;
    background-color: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #ebebeb;
    max-width: 584px;
    width: 100%;
}

.stat-item {
    text-align: center;
}

.stat-value {
    display: block;
    font-size: 24px;
    font-weight: 500;
    color: #1a73e8;
    margin-bottom: 4px;
}

.stat-label {
    font-size: 12px;
    color: #5f6368;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Market data page styles (matching your aesthetic) */
.market-data-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 24px;
}

.data-section {
    background: #ffffff;
    border: 1px solid #ebebeb;
    border-radius: 8px;
    margin-bottom: 24px;
    overflow: hidden;
}

.section-header {
    background-color: #f8f9fa;
    padding: 16px 24px;
    border-bottom: 1px solid #ebebeb;
}

.section-title {
    font-size: 18px;
    font-weight: 500;
    color: #3c4043;
    margin: 0;
}

.section-content {
    padding: 24px;
}

.data-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
}

.data-table th {
    background-color: #f8f9fa;
    color: #5f6368;
    font-weight: 500;
    padding: 12px 16px;
    text-align: left;
    border-bottom: 1px solid #ebebeb;
}

.data-table td {
    padding: 12px 16px;
    border-bottom: 1px solid #f1f3f4;
}

.data-table tr:hover {
    background-color: #f8f9fa;
}

.chart-container {
    position: relative;
    height: 400px;
    margin: 16px 0;
}

/* Mobile responsive updates (preserves your existing mobile code) */
@media (max-width: 600px) {
    .quick-stats {
        flex-direction: column;
        gap: 16px;
        padding: 12px;
    }
    
    .quick-stats .stat-item {
        padding: 8px 0;
        border-bottom: 1px solid #ebebeb;
    }
    
    .quick-stats .stat-item:last-child {
        border-bottom: none;
    }
    
    .market-data-container {
        padding: 16px;
    }
    
    .data-section {
        margin-bottom: 16px;
    }
    
    .section-content {
        padding: 16px;
    }
    
    .chart-container {
        height: 300px;
    }
    
    .data-table {
        font-size: 12px;
    }
    
    .data-table th,
    .data-table td {
        padding: 8px 12px;
    }
}
